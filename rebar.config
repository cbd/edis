{deps, [{elog, "\.*", {git, "git://github.com/inaka/elog.git", "master"}},
        {erldis, "\.*", {git, "git://github.com/inaka/erldis.git", "master"}},
        {eleveldb, "\.*", {git, "git@github.com:inaka/eleveldb.git", "master"}}]}.
{require_otp_vsn, "R14"}.
{erl_first_files, ["test/edis_benchmarker.erl"]}.
{erl_opts, [{src_dirs, ["src", "tests", "test/benchmarks"]},
            {i, "deps/elog/include"},
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record, debug_info]}.
{xref_checks, [undefined_function_calls]}.
{edoc_opts, [{report_missing_types, true}, todo]}.
{ct_extra_params,"-logdir logs/ct"}.
